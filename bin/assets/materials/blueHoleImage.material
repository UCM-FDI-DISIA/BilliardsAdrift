material blueHoleImage {
    receive_shadows on
    technique {
        pass {

            diffuse 1.0 1.0 0.0 1.0
            specular 0.5 0.0 0 0 0
            lighting off
		    scene_blend alpha_blend  //IMPORTANTE MATERIAL: para que sea transparente
		    depth_write off  //IMPORTANTE MATERIAL LUZ para ser m√°s eficiente de decirle no tener en cuenta el depth
            texture_unit {
                
                texture textures/blueHoleImage.png
                tex_address_mode wrap
                colour_op modulate
            }
        }
    }
}
